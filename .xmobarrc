Config {
  font = "xft:Monospace-10:bold:Symbola-10:bold",
-- Need newer version of xmobar?
--  iconRoot = "/home/mattr/.icons/xbm/",
  bgColor = "black",
  fgColor = "gray",
  position = Top,
  hideOnStart = False,
  lowerOnStart = True,
  allDesktops = True,
  overrideRedirect = False,
  persistent = False,
  pickBroadest = True,
  commands = [
    Run Weather "EGGD" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000,
    Run Com "/home/mattr/bin/wireless-info" [] "wifi" 30,
    Run Com "/home/mattr/bin/battery.sh" [] "battery" 100,
    Run CommandReader "/home/mattr/bin/notify-volume.sh" "vol",
    Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10,
    Run Memory ["-t","Mem: <usedratio>%"] 10,
    Run Swap [ ] 10,
    Run Date "%a %b %_d %Y %H:%M" "date" 10
    ],
  sepChar = "%",
  alignSep = "}{",
  template = "%cpu% | %memory% * %swap% | %battery% }{ <icon=/home/mattr/.icons/xbm/wifi_02.xbm/> %wifi% | %EGGD% | <icon=/home/mattr/.icons/xbm/spkr_01.xbm/> %vol% | <fc=#ee9a00>%date%</fc>"
  }
