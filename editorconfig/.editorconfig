# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{js,py}]
charset = utf-8

# Python
[*.py]
indent_style = space
indent_size = 4

# Lisp
[*.{el,clj}]
indent_style = space
indent_size = 4

# Java/C style
[*.{c,java,js}]
indent_style = space
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.conf,*.ini]
indent_style = space
indent_size = 4
